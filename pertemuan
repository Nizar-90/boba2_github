// <----------------------------------split--------------------------------------------------->
let kalimat1 = "Restu Ganteng keknya"

let kalimatv2 = kalimat1.split(" ")

console.log(kalimatv2)

console.log(   kalimatv2[0]  )
// <----------------------------------split--------------------------------------------------->

// <----------------------------------join---------------------------------------------------->
let kalimat2 = ["Restu","Ganteng","keknya"]
let kalimatv3 = kalimat2.join("-")

console.log(kalimatv3)

console.log(   kalimatv3[0]  )
// <----------------------------------join---------------------------------------------------->

// <----------------------------------join---------------------------------------------------->
let kalimat3 = ["hadi","pasti","tampan"]
let gabung = [...kalimat2, ...kalimat3]
console.log(gabung)
// <----------------------------------join---------------------------------------------------->

